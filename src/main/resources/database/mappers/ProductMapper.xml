<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.thr.i1.product.ProductDAO">
  	<!-- Product List 카테고리별로 구분, 검색(전체) -->
	<select id="getList" parameterType="Map" resultType="ProductDTO">
		SELECT * FROM 
			(SELECT ROWNUM R, P.* FROM 
				(SELECT * FROM PRODUCT WHERE 
	  				<if test="product.c1!=null">C1=#{product.c1}</if>
	  				<if test="product.c2!=null">C2=#{product.c2}</if>
	  				<if test="product.c3!=null">C3=#{product.c3}</if>) P)
	  	WHERE R BETWEEN #{pager.startRow} AND #{pager.lastRow}
	</select>
	
	<!-- 카테고리별 게시물 수 -->
	<select id="getCount" parameterType="ProductDTO" resultType="Long">
		SELECT COUNT(ID) FROM PRODUCT WHERE 
		<if test="c1!=null">C1=#{c1}</if>
		<if test="c2!=null">C2=#{c2}</if>
		<if test="c3!=null">C3=#{c3}</if>
	</select>
	
	<!-- Product Details -->
	<select id="getSelect" parameterType="ProductDTO" resultType="ProductDTO">
		SELECT * FROM PRODUCT WHERE ID=#{id}
	</select>
	
  
  </mapper>